<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="630.0" prefWidth="1120" style="-fx-background-color: #3DBB5B;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.14-internal" fx:controller="com.youngtfy.client.controller.RegisterController" >
    <!-- 로고와 제목 -->
    <Label layoutX="500" layoutY="50" text="YoungT-fy" textFill="black">
        <font>
            <Font name="Arial Bold" size="36" />
        </font>
    </Label>
    <ImageView fitHeight="100" fitWidth="100" layoutX="1000" layoutY="50">
        <Image url="@image/ytfy_logo.png" />
    </ImageView>

    <!-- 회원가입 텍스트 -->
    <Label layoutX="300" layoutY="150" text="회원가입">
        <font>
            <Font name="Arial" size="28" />
        </font>
    </Label>

    <!-- 이메일 -->
    <Label layoutX="300" layoutY="220" text="E-mail">
        <font>
            <Font name="Arial" size="16" />
        </font>
    </Label>
    <TextField fx:id = "emailField" layoutX="500" layoutY="220" prefWidth="300" promptText="example@dot.com" />

    <!-- 비밀번호 -->
    <Label layoutX="300" layoutY="290" text="Password">
        <font>
            <Font name="Arial" size="16" />
        </font>
    </Label>
    <PasswordField fx:id="passwordField" layoutX="500" layoutY="290" prefWidth="300" />

    <!-- 비밀번호 확인 -->
    <Label layoutX="300" layoutY="360" text="Confirm Password">
        <font>
            <Font name="Arial" size="16" />
        </font>
    </Label>
    <PasswordField fx:id="confirmPasswordField" layoutX="500" layoutY="360" prefWidth="300" />

    <!-- 닉네임 -->
    <Label layoutX="300" layoutY="430" text="Nickname">
        <font>
            <Font name="Arial" size="16" />
        </font>
    </Label>
    <TextField fx:id="usernameField" layoutX="500" layoutY="430" prefWidth="300" promptText="CORONANAMOREMOMO" />

    <!-- 가입 버튼 -->
    <Button fx:id="registerSubmitBtn" layoutX="500" layoutY="500" prefWidth="300" style="-fx-background-color: #a0e474; -fx-text-fill: black;" text="가입하기" />

    <!-- 뒤로가기 버튼 추가 -->
    <Button fx:id="backBtn" layoutX="50" layoutY="50" prefWidth="100" style="-fx-background-color: #f5f5f5; -fx-text-fill: black;" text="뒤로가기" />

</AnchorPane>
